@page
@model InfoSecReports.Pages.ScriptOfObjects.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Сценарии проверки</h1>

<p>
    <a asp-page="Create">Создать</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Название организации
            </th>
            <th>
                Название сценария
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ScriptOfObject) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NameOfCompany)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NameOfScript)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.Id">Редактировать</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Удалить</a>
            </td>
        </tr>
}
    </tbody>
</table>
